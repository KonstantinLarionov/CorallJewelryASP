@model CorallJewelry.Models.FrontModel.PriceModel
<head>
    <script src="//code.jivo.ru/widget/vAnyCvQtOG" async></script>
</head>

    <section class="">
        <div class="row align-items-center mt-5 justify-content-center text-center">
            <h2>Цены Corall Jewelry</h2>
        </div>
        <div class="row align-items-center mt-2 justify-content-center text-center">
            <h5>
                Ознакомьтесь с ценами ювелирной мастерской Corall Jewelry <br>  на ремонт и изготовление ювелирных украшений - изделий.
            </h5>
        </div>
        @if (Model.PriceLists != null)
        {
            @for (int i = 0; i < Model.PriceLists.Count; i++)
            {
                <div class="row justify-content-start mt-5 align-items-center pr-5 pl-5">
                    <h4 style="color: #c33;">@Model.PriceLists[i].Category</h4>
                </div>
                <div class="row justify-content-center mt-2 align-items-center pr-5 pl-5">
                    <table class="table ">
                        <thead class="thead-dark">
                            <tr>
                                <th scope="col">Виды работ</th>
                                <th scope="col">Цена</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int j = 0; j < Model.PriceLists[i].Prices.Count; j++)
                            {
                                <tr>
                                    <td>@Model.PriceLists[i].Prices[j].Name</td>
                                    <td>@Model.PriceLists[i].Prices[j].Money</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        }
    </section>