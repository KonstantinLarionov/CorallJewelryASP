@model CorallJewelry.Models.FrontModel.ProductModel
<section class="mt-5">
    <div class="container-fluid ">
        <div class="row align-items-center mb-5 justify-content-center text-center">
            <h2>Описание изделия</h2>
        </div>

        <div class="row justify-content-start">
            <div class="col-xl">
                <p class="ml-5 pl-5" style="font-size: 20px;">
                    @Model.Product.Name <br> @Model.Product.About
                </p>
            </div>

        </div>
        <div class="row justify-content-center align-items-center mt-5 mb-5">
            <img src="../images/reviews-bg2.png" />
        </div>
        <div class="row justify-content-center align-items-center mt-5 mb-5">
            <div id="multiCarousel" class="carousel slide w-100 mt-5" data-ride="carousel">
                <div class="carousel-inner w-100 " role="listbox">
                    @for (int i = 0; i < Model.Product.Images.Count; i++)
                    {
                        if (i == 0)
                        {
                            <div class="carousel-item active ">
                                <img class="d-block col-4" src="~/products/@Model.Product.Images[i].Name">
                            </div>
                        }
                        else
                        {
                            <div class="carousel-item">
                                <img class="d-block col-4" src="~/products/@Model.Product.Images[i].Name">
                            </div>
                        }
                    }
                </div>
                <a class="carousel-control-prev" href="#multiCarousel" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Предыдущий</span>
                </a>
                <a class="carousel-control-next" href="#multiCarousel" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Cледующий</span>
                </a>
            </div>
        </div>
        @if (Model.Product.Video != String.Empty)
        { 
    <div class="row justify-content-center align-items-center mt-5 mb-5">
         @Html.Raw(Model.Product.Video)
    </div>
        }

        <div class="row justify-content-center ml-5 mb-3">
            <div class="col-xl">
                <h4><strong><i>Об изделии:</i></strong></h4>
            </div>

        </div>
        <div class="row justify-content-start">
            <div class="col-xl">
                <p class="ml-5 pl-5" style="font-size: 20px;">
                    Вес : @Model.Product.Weight<br><br>
                    Камень : @Model.Product.Stone<br><br>
                    Металл : @Model.Product.Metall<br><br>
                    Цена : @Model.Product.Price P<br>
                </p>
            </div>

        </div>
    </div>
</section>